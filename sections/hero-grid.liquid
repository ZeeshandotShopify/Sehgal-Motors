{{ 'hero-grid.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero-grid.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %} hero-grid-page-width">
  <div class="hero-grid-padding section-{{ section.id }}-padding">
    <div class="hero-grid__wrapper {% if section.settings.full_width %} page-width{% endif %}">
      <!-- Desktop -->
      <div class="hero-grid-blocks-wrapper small-hide medium-hide">
        <div class="hero-blocks-inner">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'column-left' %}
                <div class="hero-column-left">
                  <a href="{{ block.settings.link }}" class="hero-column-link">{{ block.settings.cta_button_label }}</a>
                  <div class="hero-media-wrapper">
                    {% if block.settings.video == blank %}
                    {{ block.settings.image | image_url: width: '3400' | image_tag: class: 'hero-grid-image' }}
                    {% else %}
                      {{
                        block.settings.video
                        | video_tag: image_size: '1100x', loop: true, controls: true, muted: true, autoplay: true
                      }}
                    {% endif %}
                  </div>
                  <div class="hero-info-block-wrapper">
                    {% if block.settings.social_proff_text != blank %}
                      <div class="social-proff-wrapper">
                        <div class="social-proff-stars">
                          {% render 'custom-icons': custom_icon: "social-proff-stars" %}
                        </div>
                        <div class="social-proff-text">{{ block.settings.social_proff_text }}</div>
                      </div>
                    {% endif %}
                    {% if block.settings.heading %}
                      <div class="hero-grid-heading-wrapper">
                        <h1 class="h1 hero-heading">{{ block.settings.heading }}</h1>
                      </div>
                    {% endif %}
                    {% if block.settings.cta_button_label %}
                      <div class="hero-cta-wrapper">
                        <a href="{{ block.settings.link }}" class="button">{{ block.settings.cta_button_label }}</a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% when 'column-right' %}
                <div class="hero-column-right">
                  <div class="hero-column-right-top">
                    {% if block.settings.right_top_column_link %}
                      <a href="{{ block.settings.right_top_column_link }}" class="hero-column-link">.</a>
                    {% endif %}
                    <div class="hero-media-wrapper">
                      {{
                        block.settings.image_top
                        | image_url: width: '3400'
                        | image_tag: class: 'hero-grid-image hero-image-right-top'
                      }}
                    </div>
                    <div class="hero-info-block-wrapper">
                      {% if block.settings.subtext_top %}
                        <div class="hero-grid-subheading-wrapper">
                          <p class="h5 hero-sub-heading">{{ block.settings.subtext_top }}</p>
                        </div>
                      {% endif %}
                      {% if block.settings.heading_top %}
                        <div class="hero-grid-heading-wrapper">
                          <h2 class="h2 hero-heading">{{ block.settings.heading_top }}</h2>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="hero-column-right-bottom testing">
                    {% if block.settings.right_bottom_column_link %}
                      <a href="{{ block.settings.right_bottom_column_link }}" class="hero-column-link">.</a>
                    {% endif %}
                    <div class="hero-media-wrapper">
                      {{
                        block.settings.image_bottom
                        | image_url: width: '3400'
                        | image_tag: class: 'hero-grid-image heroimage-right-bottom'
                      }}
                    </div>
                    <div class="hero-info-block-wrapper">
                      {% if block.settings.subtext_bottom %}
                        <div class="hero-grid-subheading-wrapper">
                          <p class="h5 hero-sub-heading">{{ block.settings.subtext_bottom }}</p>
                        </div>
                      {% endif %}
                      {% if block.settings.heading_bottom %}
                        <div class="hero-grid-heading-wrapper">
                          <h2 class="h2 hero-heading">{{ block.settings.heading_bottom }}</h2>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
      <!-- Mobile -->
      <div class="hero-grid-blocks-wrapper-mobile large-up-hide">
        <div class="hero-grid-swiper-initialize">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'column-left' %}
                  <div class="swiper-slide">
                    <div class="hero-column-left">
                      <a href="{{ block.settings.link }}" class="hero-column-link">
                        {{- block.settings.cta_button_label -}}
                      </a>
                      <div class="hero-media-wrapper">
                    {% if block.settings.video == blank %}
                    {{ block.settings.image | image_url: width: '3400' | image_tag: class: 'hero-grid-image' }}
                    {% else %}
                      {{
                        block.settings.video
                        | video_tag: image_size: '1100x', loop: true, controls: true, muted: true, autoplay: true
                      }}
                    {% endif %}
                      </div>
                      <div class="hero-info-block-wrapper">
                        {% if block.settings.social_proff_text != blank %}
                          <div class="social-proff-wrapper">
                            <div class="social-proff-stars">
                              {% render 'custom-icons': custom_icon: "social-proff-stars" %}
                            </div>
                            <div class="social-proff-text">{{ block.settings.social_proff_text }}</div>
                          </div>
                        {% endif %}
                        {% if block.settings.heading %}
                          <div class="hero-grid-heading-wrapper">
                            <h1 class="h1 hero-heading">{{ block.settings.heading }}</h1>
                          </div>
                        {% endif %}
                        {% if block.settings.cta_button_label %}
                          <div class="hero-cta-wrapper">
                            <a href="{{ block.settings.link }}" class="button">{{ block.settings.cta_button_label }}</a>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                {% when 'column-right' %}
                  <div class="swiper-slide">
                    <div class="hero-column-right-top">
                      {% if block.settings.right_top_column_link %}
                        <a href="{{ block.settings.right_top_column_link }}" class="hero-column-link">.</a>
                      {% endif %}
                      <div class="hero-media-wrapper">
                        {{
                          block.settings.image_top
                          | image_url: width: '3400'
                          | image_tag: class: 'hero-grid-image hero-image-right-top'
                        }}
                      </div>
                      <div class="hero-info-block-wrapper">
                        {% if block.settings.subtext_top %}
                          <div class="hero-grid-subheading-wrapper">
                            <p class="h5 hero-sub-heading">{{ block.settings.subtext_top }}</p>
                          </div>
                        {% endif %}
                        {% if block.settings.heading_top %}
                          <div class="hero-grid-heading-wrapper">
                            <h1 class="h1 hero-heading">{{ block.settings.heading_top }}</h1>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                  <div class="swiper-slide">
                    <div class="hero-column-right-bottom">
                      {% if block.settings.right_bottom_column_link %}
                        <a href="{{ block.settings.right_bottom_column_link }}" class="hero-column-link">.</a>
                      {% endif %}
                      <div class="hero-media-wrapper">
                        {{
                          block.settings.image_bottom
                          | image_url: width: '3400'
                          | image_tag: class: 'hero-grid-image heroimage-right-bottom'
                        }}
                      </div>
                      <div class="hero-info-block-wrapper">
                        {% if block.settings.subtext_bottom %}
                          <div class="hero-grid-subheading-wrapper">
                            <p class="h5 hero-sub-heading">{{ block.settings.subtext_bottom }}</p>
                          </div>
                        {% endif %}
                        {% if block.settings.heading_bottom %}
                          <div class="hero-grid-heading-wrapper">
                            <h1 class="h1 hero-heading">{{ block.settings.heading_bottom }}</h1>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
          <!-- If we need pagination -->
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Grid",
  "class": "hero-grid-section",
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "column-left",
      "name": "Column Left",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video",
          "info": "If the video is uploaded, the video will be visible, and the images will no longer be shown."
        },
        {
          "type": "text",
          "id": "social_proff_text",
          "label": "Social Proff Text"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "cta_button_label",
          "label": "CTA Button Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "CTA Link"
        }
      ]
    },
    {
      "type": "column-right",
      "name": "Column Right",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_top",
          "label": "Image Top"
        },
        {
          "type": "url",
          "id": "right_top_column_link",
          "label": "Link",
          "info": "Top Column Link"
        },
        {
          "type": "text",
          "id": "subtext_top",
          "label": "Subtext Top"
        },
        {
          "type": "text",
          "id": "heading_top",
          "label": "Heading Top"
        },
        {
          "type": "image_picker",
          "id": "image_bottom",
          "label": "Image Bottom"
        },
        {
          "type": "url",
          "id": "right_bottom_column_link",
          "label": "Link",
          "info": "Bottom Column Link"
        },
        {
          "type": "text",
          "id": "subtext_bottom",
          "label": "Subtext Bottom"
        },
        {
          "type": "text",
          "id": "heading_bottom",
          "label": "Heading Bottom"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Grid"
    }
  ]
}
{% endschema %}
