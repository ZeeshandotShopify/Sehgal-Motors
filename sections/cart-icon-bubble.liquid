{% comment %}      render 'icon-cart-empty'   render 'icon-cart' {% endcomment %}
{%- liquid
  if cart == empty
    render 'custom-icons': custom_icon: "cart-empty"
  else
    render 'custom-icons': custom_icon: "cart-filled"
  endif
-%}
